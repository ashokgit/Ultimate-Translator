# Database Configuration
MONGODB_URI=mongodb://mongo:27017/ultimate_translator
MONGODB_URI_LOCAL=mongodb://localhost:27017/ultimate_translator

# Server Configuration
PORT=3000
NODE_ENV=development

# Default Translation Provider
# Options: google, openai, huggingface
DEFAULT_TRANSLATOR=huggingface

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# HuggingFace Configuration
HUGGINGFACE_API_URL=http://translator:5000
HUGGINGFACE_API_URL_LOCAL=http://localhost:5000

# Google Translate Proxy Configuration (Optional)
# Comma-separated list of proxy URLs
GOOGLE_TRANSLATE_PROXIES=http://proxy1:8080,http://proxy2:8080

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Performance Settings
TRANSLATION_CACHE_TTL=3600
MAX_CONCURRENT_TRANSLATIONS=10
REQUEST_TIMEOUT=30000
